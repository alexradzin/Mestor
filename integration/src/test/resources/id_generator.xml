<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="id_generator_test">
	

		<class>org.mestor.entities.annotatedidgenerator.CompositeGeneratedId</class>
		<class>org.mestor.entities.annotatedidgenerator.NumericAutoGeneratedId</class>
		<class>org.mestor.entities.annotatedidgenerator.NumericGeneratedId</class>
		<class>org.mestor.entities.annotatedidgenerator.SimpleNumericId</class>
		<class>org.mestor.entities.annotatedidgenerator.StringGeneratedId</class>


		<properties>
			<property name="org.mestor.persistor.class" value="org.mestor.persistence.cql.CqlPersistor"/>
			<property name="org.mestor.ddl.generation" value="CREATE"/>
			<property name="org.mestor.cassandra.hosts" value="localhost"/>
			
			<property name="org.mestor.id.generator.java.lang.Long" value="org.mestor.persistence.idgenerator.SimpleNumericSequence"/>
			<property name="org.mestor.id.generator.java.lang.String" value="org.mestor.persistence.idgenerator.SimpleUuidSequence"/>
			
			<property name="org.mestor.id.generator.number-generator" value="org.mestor.persistence.idgenerator.SimpleNumericSequence"/>
			<property name="org.mestor.id.generator.string-generator" value="org.mestor.persistence.idgenerator.SimpleUuidSequence"/>
		</properties>
		
	</persistence-unit>

</persistence>
